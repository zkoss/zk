{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "ScriptHost" // ActiveObject
    ],
    "module": "commonjs",
    "allowJs": true,
    "noEmit": true, // type checking only
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false, // leave this for js compatible,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules",
      "node_modules/@types",
      "../zkcml/node_modules"
    ],
    "types": [
      "zk",
      "zul",
      "zkbind",
      "stateless",
      "zkmax",
      "zkex",
      "client-bind",
      "webpack-env"
    ],
    "paths": {
      "@zk/*": [
        "./zk/src/main/resources/web/js/zk/*"
      ],
      "@zul/*": [
        "./zul/src/main/resources/web/js/zul/*"
      ],
      "@stateless/*": [
        "./stateless/src/main/resources/web/js/stateless/*"
      ],
      "@zkex/*": [
        "../zkcml/zkex/src/main/resources/web/js/zkex/*"
      ],
      "@zkmax/*": [
        "../zkcml/zkmax/src/main/resources/web/js/zkmax/*"
      ],
      "@stateless-ex/*": [
        "../zkcml/stateless-ex/src/main/resources/web/js/statelessex/*"
      ],
      "@client-bind/*": [
        "../zkcml/client-bind/src/main/resources/web/js/clientbind/*"
      ]
    }
  },
  "include": [
    "zk/src/main/resources/web/js",
    "zul/src/main/resources/web/js",
    "zkbind/src/main/resources/web/js",
    "zhtml/src/main/resources/web/js",
    "stateless/src/main/resources/web/js"
  ],
  "exclude": [
    "node_modules",
    "zktest",
    "**/build/*",
    "**/codegen/*"
  ]
}