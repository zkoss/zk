<target name="jsdoc">
	<!-- generate JavaScript Doc -->
	<exec executable="bash" dir="." failonerror="true">
		<arg value="${bin.dir}/jsdoc"/>
		<arg value="${project.name}"/>
		<arg value="${maindir}"/>
	</exec>
</target>


