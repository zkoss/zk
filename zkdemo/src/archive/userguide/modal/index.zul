<window use="org.zkoss.zkdemo.userguide.DemoWindow" xmlns:h="http://www.w3.org/1999/xhtml">
	<zscript><![CDATA[
		void doSelect(String s) {
			Tree tree = Path.getComponent("//userGuide/toc");
			Treeitem treeitem = tree.getSpaceOwner().getFellow(s);
			tree.selectItem(treeitem);
			java.util.Set items = new HashSet();
			items.add(treeitem);
			Events.postEvent(new SelectEvent("onSelect", tree, items));
		}
	]]></zscript>
	
	<html><![CDATA[
		<h3>Modal Dialogs</h3>
	]]></html>
	<h:ul>
		<h:li><toolbarbutton label="Messagebox" onClick="doSelect(&quot;m1&quot;)"/></h:li>
		<h:li><toolbarbutton label="Fileupload" onClick="doSelect(&quot;m2&quot;)"/></h:li>
		<h:li><toolbarbutton label="Filedownload" onClick="doSelect(&quot;m2d&quot;)"/></h:li>
		<h:li><toolbarbutton label="Modal dialog" onClick="doSelect(&quot;m3&quot;)"/></h:li>
	</h:ul>
</window>
