	Dynamic Combo (0 item at 1st, 1 at 2nd, 3 at 3rd, 6 at 4th, 10 at 5th...)
	<combobox id="dcombo" onOpen="if (event.open) onComboOpen()"/>
	<zscript>
		int opens = 0;
		void onComboOpen() {
			for (int j = opens++; --j >= 0;)
				new Comboitem("New " + dcombo.getItemCount()).setParent(dcombo);
		}
	</zscript>
