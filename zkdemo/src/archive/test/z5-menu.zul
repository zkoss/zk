<window title="Menu" border="normal">
	<menubar id="menubar" autodrop="true">
		<menu label="File" src="/img/m1.gif" >
			<menupopup>
				<menuitem src="/img/m1.gif" label="New" onClick="alert(self.label)"/>
				<menuitem src="/img/m2.gif" label="Open" onClick="alert(self.label)"/>
				<menuitem src="/img/m3.gif" label="Save" onClick="alert(self.label)"/>
				<menuseparator/>
				<menuitem label="Exit" onClick="alert(self.label)"/>
			</menupopup>
		</menu>
		<menu label="Help">
			<menupopup>
				<menuitem label="Index" onClick="alert(self.label)"/>
				<menuseparator/>
				<menu label="About">
					<menupopup>
						<menuitem checked="true" label="None AutoCheck" onClick="alert(self.label)"/>
						<menuitem checked="true" autocheck="true" label="AutoCheck" onClick="alert(self.label)"/>
					</menupopup>
				</menu>
			</menupopup>
		</menu>
		<menu src="/img/m2.gif">
			<menupopup>
				<menuitem label="Index" onClick="alert(self.label)"/>
			</menupopup>
		</menu>
		<menuitem label="Index" onClick="alert(self.label)"/>
	</menubar>
	<button label="Change Orient">
		<attribute name="onClick">
		if ("vertical".equals(menubar.getOrient()))
			menubar.setOrient("horizontal");
		else menubar.setOrient("vertical");
		</attribute>
	</button>
</window>
