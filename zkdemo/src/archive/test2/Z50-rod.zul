		<tab label="Tab 1-2"/>
	</tabs>
	<tabpanels>
		<tabpanel>This is panel 1-1</tabpanel>
		<tabpanel id="tp2">This is panel 1-2</tabpanel>
	</tabpanels>
</tabbox>

