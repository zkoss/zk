<zk>
	<listbox id="listbox">
		<listhead sizable="true">
			<listheader id="hd" label="1" visible="false" />
			<listheader label="2" />
			<listheader label="3" />
		</listhead>
		<listitem>
			<listcell id="r1" label="1" visible="false" />
			<listcell label="2" />
			<listcell label="3" />
		</listitem>
		<listitem>
			<listcell id="r2" label="1" visible="false" />
			<listcell label="2" />
			<listcell label="3" />
		</listitem>
	</listbox>
	<button label="test">
		<attribute name="onClick">
			hd.visible = !hd.visible; 
			r1.visible = !r1.visible;
			r2.visible = !r2.visible;
			if (Executions.getCurrent().isBrowser("ie8-")) {
				listbox.invalidate();
			}
		</attribute>
	</button>
</zk>
