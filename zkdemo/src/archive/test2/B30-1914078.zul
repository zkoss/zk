<window title="Animation Effects" border="normal"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<h:p>Keep Clicking on "Toggle Visible", and then the Window sometimes pops up from top-right corner</h:p>
	<button label="Toggle Visible" onClick="win.visible = !win.visible" />
	<window id="win" border="normal" width="200px" position="center"
		mode="overlapped"
		action="onshow:anima.moveDown(#{self});onhide:anima.fade(#{self})"
		visible="false">
		<caption image="/test2/img/inet.png" label="Hi there!" />
		<checkbox label="Hello, Effects!" />
	</window>
</window>
