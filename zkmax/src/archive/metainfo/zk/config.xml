<config>
	<config-name>zkmax</config-name><!-- used to resolve dependency -->
	<depends>zkex</depends>

	<version>
		<version-class>org.zkoss.zkmax.Version</version-class>
		<version-uid>3.6.1</version-uid>
	</version>

	<zscript-config>
		<language-name>JavaScript</language-name>
		<interpreter-class>org.zkoss.zkmax.scripting.rhino.RhinoInterpreter</interpreter-class>
	</zscript-config>

	<zscript-config>
		<language-name>Groovy</language-name>
		<interpreter-class>org.zkoss.zkmax.scripting.groovy.GroovyInterpreter</interpreter-class>
	</zscript-config>

	<zscript-config>
		<language-name>Ruby</language-name>
		<interpreter-class>org.zkoss.zkmax.scripting.jruby.JRubyInterpreter</interpreter-class>
	</zscript-config>

	<zscript-config>
		<language-name>Python</language-name>
		<interpreter-class>org.zkoss.zkmax.scripting.jython.JythonInterpreter</interpreter-class>
	</zscript-config>

	<system-config>
		<au-writer-class>org.zkoss.zkmax.au.http.SmartAuWriter</au-writer-class>
	</system-config>
	<client-config>
		<resend-delay>9000</resend-delay><!-- because SmartAuWriter is used -->
	</client-config>

	<device-config>
		<device-type>ajax</device-type>
		<server-push-class>org.zkoss.zkmax.ui.comet.CometServerPush</server-push-class>
	</device-config>

	<listener>
		<listener-class>org.zkoss.zkmax.init.WebAppInit</listener-class>
	</listener>
</config>
