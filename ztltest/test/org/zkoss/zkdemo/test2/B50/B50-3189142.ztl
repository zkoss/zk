<test tags="B50-3189142.zul,Combobox,onOpen,IE7,Unstable">
	<case id="ztl">
		<server><!--
			


<zk> 
Please type a word into the textbox, you shouldn't see the width of the popup is wrong. (IE7 only)
<combobox id="cb" autodrop="true" onOpen=""> 
<comboitem label="1"/> 
<comboitem label="2"/> 
<comboitem label="3"/> 
</combobox> 
</zk>

		--></server>
		<client><![CDATA[
				focus(cb.$n("real"));
				keyPress(cb.$n("real"), "A");
				waitResponse();
				verifyTrue(jq(".z-combobox-pp").exists());
				verifyTrue(getElementWidth(jq(".z-combobox-pp")).intValue() > 0);
				int cbx = getElementWidth(jq("i.z-combobox")).intValue();
				int pp = getElementWidth(jq(".z-combobox-pp")).intValue();
				verifyTolerant(cbx, pp, 6);
		]]></client>
	</case>
</test>