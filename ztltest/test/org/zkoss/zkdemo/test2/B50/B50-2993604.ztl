<test tags="B50-2993604.zul,tree,treeitem,treerow,treecell">
	<case id="open">
		<server id="zul"><![CDATA[
			<zk>
				<button id="btn" label="change label" onClick='treecell.label="new Name"' />
				<tree>
					<treechildren>
						<treeitem>
							<treerow id="treerow">
								<treecell label="Item" id="treecell" />
							</treerow>
							<treechildren>
								<treeitem>
									<treerow>
										<treecell label="Item 1" />
									</treerow>
								</treeitem>
							</treechildren>
						</treeitem>
					</treechildren>
				</tree>
			</zk>
		]]></server>
		<client><![CDATA[
				Element openIcon = treerow.$n("open");
				click(openIcon);
				waitResponse();
				click(btn);
				waitResponse();
				click(openIcon);
				waitResponse();
				verifyTrue(jq(openIcon).hasClass("z-tree-root-open"));			
		]]></client>
	</case>
</test>