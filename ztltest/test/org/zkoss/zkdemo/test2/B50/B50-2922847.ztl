<test tags="B50-2922847.zul,A,E,Toolbarbutton">
	<case id="closed">
		<server>
			<!--
				<zk>
				Please cleck the toolbarbutton label to see the font should be bold
				<toolbarbutton id="tbtn" label="click me" style="font-weight:bold" 
						onClick='self.style = self.style.equals("font-weight:bold;") ? "font-weight:bold;":"font-weight:normal;"'/>
				</zk>
			-->
		</server>
		<client><![CDATA[	
				if (!("bold".equals(jq(".z-toolbarbutton-cnt")
						.css("font-weight"))
						|| "700".equals(jq(".z-toolbarbutton-cnt").css(
								"font-weight"))))
					verifyTrue(false);
				click(tbtn);
				waitResponse();
				if (!("normal".equals(jq(".z-toolbarbutton-cnt").css(
						"font-weight"))
						|| "400".equals(jq(".z-toolbarbutton-cnt").css(
								"font-weight"))))
					verifyTrue(false);			
		]]></client>
	</case>
</test>