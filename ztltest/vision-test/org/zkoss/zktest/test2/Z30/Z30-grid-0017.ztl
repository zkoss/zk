<test tags="Z30-grid-0017.zul,Z30,C,E,Grid,Row,Style,VisionTest">
	<case id="GridDisplay">
		<server><!--
<zk>
	Border between two rows, and different width (the first column = 100, the second column = 200):
	<grid width="300px">
		<columns>
			<column width="100px"/>
			<column width="200px"/>
		</columns>
		<rows>
			<row>
				<label value="(1, 1)"/>
				<label value="(2, 1)"/>
			</row>
			<row style="border-top: 1px solid blue">
				<label value="(1, 2)"/>
				<label value="(2, 2)"/>
			</row>
			<row style="border-left:4px solid green;border-bottom: 4px solid green">
				<label value="(1, 2)"/>
				<label value="(2, 2)"/>
			</row>
			<row style="border-top: 1px solid blue">
				<label value="(1, 2)"/>
				<label value="(2, 2)"/>
			</row>
			<row style="border-right:4px solid green;border-top: 4px solid green">
				<label value="(1, 2)"/>
				<label value="(2, 2)"/>
			</row>
		</rows>
	</grid>
</zk>
		--></server>
		<client><![CDATA[
			verifyImage();
		]]></client>
	</case>
</test>