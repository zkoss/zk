nodeChecker=$(node -v)
if [ -z "$nodeChecker" ] ; then
	echo "please install node.js"
	exit 1
fi

maindir="$(pwd)"
cd "$1" || exit 1
shift

echo "tsmin: Run Gulp on $maindir"
npx gulp -f gulpfile.js --cwd "$maindir" build:single "$@"