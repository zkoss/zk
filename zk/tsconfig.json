{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "ScriptHost" // declare var ActiveXObject: (type: string) => void;
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "../build/js",
    // "rootDir": "./src/main/resources/web/js",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    //    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    //    "noImplicitReturns": true,
    //    "noUnusedLocals": true,
    "noImplicitAny": false, // leave this for js compatible,
    "noImplicitOverride": true,
    // "importsNotUsedAsValues": "error", // TODO
    "noUnusedLocals": true,
    // "noUnusedParameters": true, // TODO
    // "exactOptionalPropertyTypes": true, // TODO
    "forceConsistentCasingInFileNames": true,
    "allowUmdGlobalAccess": true,
    "types": [
      "webpack-env",
      "zul"
    ],
    "paths": {
      "@zul/*": [
        "../zul/src/main/resources/web/js/zul/*"
      ]
    }
  },
  "include": [
    "./src/main/resources/web/js/zk"
  ]
}