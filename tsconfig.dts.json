{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./build/dts",
    "stripInternal": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "**/build/*",
    "**/codegen/*",
    "**/*.js"
  ]
}