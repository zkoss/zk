<language>
	<language-name>xml</language-name>
	<device-type>xml</device-type>
	<namespace>http://www.zkoss.org/2007/xml</namespace>
	<extension>xml</extension><!-- the first extension is the major one -->

	<version>
		<version-class>org.zkoss.zml.Version</version-class>
		<version-uid>3.6.0</version-uid>
	</version>

	<!-- Indicates all tags are from a native namespace.
		They are represented by as few as native components.
	 -->
	<native-namespace>true</native-namespace>

	<!-- 
		Note: '~./' means it is located in the class path starting from
		'/metainfo/web'. For example, '~./img/abc.gif' means abc.gif located
		at '/metainfo/web/img'.
	-->
	<mold>
		<mold-name>desktop</mold-name>
		<mold-uri>~./zml/desktop.dsp</mold-uri>
	</mold>
	<mold>
		<mold-name>page</mold-name>
		<mold-uri>~./zml/page.dsp</mold-uri>
	</mold>

	<!-- Defines the component and attribute names used to represent
	a label when a plain text is found in ZUL XML.
	-->
	<label-template>
		<component-name>native</component-name>
		<component-attribute>prologContent</component-attribute>
		<raw/><!-- 1) don't trim, 2) generated directly -->
	</label-template>
	<!-- Defines the templat for macro components -->
	<macro-template>
		<macro-class>org.zkoss.zml.XmlMacroComponent</macro-class>
		<macro-uri>~./zml/macro.dsp</macro-uri>
	</macro-template>
	<!-- Defines the template for the Native namespace
		[Optional] Define it only if the Native namespace is supported.
	-->
	<native-template>
		<native-class>org.zkoss.zml.XmlNativeComponent</native-class>
	</native-template>

	<!-- To have better performance with BeanShell, import most-common later -->
	<zscript language="Java">
	import java.util.*;
	import java.lang.*;
	import org.zkoss.zk.ui.util.Clients;
	import org.zkoss.zk.ui.event.*;
	import org.zkoss.zk.ui.*;
	import org.zkoss.zml.*;
	</zscript>

	<zscript language="JavaScript">
	importPackage(Packages.java.util);
	importPackage(Packages.java.lang);
	importClass(Packages.org.zkoss.zk.ui.util.Clients);
	importPackage(Packages.org.zkoss.zk.ui.event);
	importPackage(Packages.org.zkoss.zk.ui);
	importPackage(Packages.org.zkoss.zml);
	</zscript>

	<!-- Groovy "forgot" what are imported, so we have to import each time
	-->
	<zscript language="Groovy" each-time="true">
	import java.util.*
	import java.lang.*
	import org.zkoss.zk.ui.util.Clients
	import org.zkoss.zk.ui.event.*
	import org.zkoss.zk.ui.*
	import org.zkoss.zml.*
	</zscript>

	<zscript language="Ruby">
	require 'java'
	module Java
		include_package 'java.util'
		include_package 'java.lang'
		include_class 'org.zkoss.zk.ui.util.Clients'
		include_package 'org.zkoss.zk.ui.event'
		include_package 'org.zkoss.zk.ui'
		include_package 'org.zkoss.zml'
	end
	</zscript>

	<component><!-- Feature 2493161 -->
		<component-name>macro</component-name>
		<component-class>org.zkoss.zk.ui.HtmlMacroComponent</component-class>
		<macro-uri>~./zul/html/macro.zul</macro-uri>
	</component>
	<component>
		<component-name>native</component-name>
		<component-class>org.zkoss.zml.XmlNativeComponent</component-class>
	</component>
	<component>
		<component-name>transformer</component-name>
		<component-class>org.zkoss.zml.Transformer</component-class>
	</component>
</language>
