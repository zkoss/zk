					<groupId>org.zkoss.zk</groupId>
					<artifactId>za11y</artifactId>
					<version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>zktestNoA11y</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<excludedGroups>org.zkoss.zktest.zats.wcag.WcagTestOnly</excludedGroups>
							<excludes>
								<exclude>**/wcag/*Test.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
