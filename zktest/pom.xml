	<build>
		<testSourceDirectory>${project.basedir}/test/java</testSourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<configuration>
					<stopKey>zktest</stopKey>
					<stopPort>9999</stopPort>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<forkCount>${forkCount}</forkCount>
					<reuseForks>${reuseForks}</reuseForks>
					<runOrder>alphabetical</runOrder>
					<rerunFailingTestsCount>2</rerunFailingTestsCount>
					<testClassesDirectory>${test.dir}</testClassesDirectory>
					<includes>
						<include>**/*Test.java</include>
					</includes>
					<reportsDirectory>${report.dir}</reportsDirectory>
					<argLine>-Xmx2048m -Djava.util.logging.config.file=src/archive/WEB-INF/logging.properties</argLine>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>zktest</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
