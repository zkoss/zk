<zk>
	<label>Focus to target</label>
	<div viewModel="@init('org.zkoss.zktest.test2.F90_ZK_MVVM', type='focus')">
		<div>
			<button onClick="@('doFocus')" label="focus the textbox"/>
			<button onClick="@('doFocusInList')" label="focus the textbox in a List"/>
			<textbox value="@(text)" />
		</div>
		<!-- scroll to 'each' component -->
		<forEach items="@(list)">
			<div>
				<textbox value="@(each)"/>
			</div>
		</forEach>
	</div>
</zk>
