	format="yyyyMMdd ahhmm"
	<separator/>
	<datebox format="yyyyMMdd ahhmm" onCreate="self.value = new Date(0)" width="250px" showTodayLink="true" w:onChange="log(6)" locale="en_US"/>
	<separator/>
	format="yyyy/MM/dd hmmaaa"
	<separator/>
	<datebox format="yyyy/MM/dd hmmaaa" onCreate="self.value = new Date(0)" width="250px" showTodayLink="true" w:onChange="log(7)" locale="en_US"/>
</zk>