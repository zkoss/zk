<zk>
	<nodom viewModel="@('org.zkoss.zktest.test2.B95_ZK_4726VM')">
		<grid id="outergrid" width="700px" model="@bind(vm.items)">
			<columns>
				<column label="index"/>
				<column label="name"/>
				<column label="action" width="300px"/>
			</columns>

			<template name="model" var="item">
				<row>
					<label value="@bind(itemStatus.index)"/>
					<label value="@bind(item)"/>
					<hbox>
						<button label="Click me and no exception" onClick="@command('showIndex', index=itemStatus.index)"/>
					</hbox>
				</row>
			</template>
		</grid>
		<label id="result" value="@load(vm.message)"/>
	</nodom>
</zk>
