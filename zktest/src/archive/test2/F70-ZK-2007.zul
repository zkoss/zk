<window title="Toggle Popup" border="normal" width="300px" height="300px">
	<vlayout>
		<button label="Left click me" popup="pp, position=after_end, type=toggle"/>
		<button label="Right click me" context="ct, position=after_end, type=toggle"/>
		Click the button will open the popup, click again it will close.
	</vlayout>
	<popup id="pp">
		<label value="I am Pop."/>
	</popup>
	<popup id="ct">
		<label value="I am Context."/>
	</popup>
</window>