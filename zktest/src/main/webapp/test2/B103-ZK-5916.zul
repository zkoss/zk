<zk>
    <label multiline="true">
        1. There should be no exception when loading this radiogroup using a template renderer with an hlayout.
        2. Test various template-rendering approaches using a radiogroup.
    </label>

    <caption label="Simple case">
        <div viewModel="@id('vm')@init('org.zkoss.zktest.test2.B103_ZK_5916VM')">
            <radiogroup model="@load(vm.model)">
                <template name="model">
                    <hlayout>
                        <radio label="@load(each)" />
                    </hlayout>
                </template>
            </radiogroup>
        </div>
    </caption>

    <caption label="Radiogroup using a template renderer with a div">
        <div viewModel="@id('vm')@init('org.zkoss.zktest.test2.B103_ZK_5916VM')">
            <radiogroup model="@load(vm.model)">
                <template name="model">
                    <div>
                        <radio label="@load(each)" />
                    </div>
                </template>
            </radiogroup>
        </div>
    </caption>

    <caption label="Radiogroup using a template renderer without additional wrapping tags">
        <div viewModel="@id('vm')@init('org.zkoss.zktest.test2.B103_ZK_5916VM')">
            <radiogroup model="@load(vm.model)">
                <template name="model">
                    <radio label="@load(each)" />
                </template>
            </radiogroup>
        </div>
    </caption>

    <caption label="Radiogroup using a template renderer with both hlayout and div tags">
        <div viewModel="@id('vm')@init('org.zkoss.zktest.test2.B103_ZK_5916VM')">
            <radiogroup model="@load(vm.model)">
                <template name="model">
                    <div>
                        <hlayout>
                                <radio label="@load(each)" />
                        </hlayout>
                    </div>
                </template>
            </radiogroup>
        </div>
    </caption>
</zk>