<zk>
    <window border="none" vflex="1" apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('org.zkoss.zktest.test2.B103_ZK_5683VM')">
        <vlayout vflex="1">
            <label multiline="true">
                1. Click the first row.
                2. Hold Shift and click the third row.
                3. The selection includes rows from the first to the third row.
            </label>
            <listbox checkmark="true" multiple="true" hflex="10" vflex="1"
                     model="@load(vm.model)" selectedItems="@load(vm.selection)" onSelect="@command('onSelect')">
                <custom-attributes org.zkoss.zul.listbox.checkmarkDeselectOthers="false" />
                <template name="model">
                    <listitem value="@load(each)" label="@load(each)" />
                </template>
            </listbox>
            <hlayout hflex="1">
                <label value="Current selection:" />
                <label value="@load(vm.selectionLabel)" />
            </hlayout>
        </vlayout>
    </window>
</zk>