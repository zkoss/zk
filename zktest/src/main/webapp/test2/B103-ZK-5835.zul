<zk>
    <label multiline="true">
        1. click the button's icon (don't click the triangle icon) to open the popup
        2. click the menuitem
        3. you should see a notification showing "Index"
    </label>
    <combobutton iconSclass="z-icon-columns" onClick="self.setOpen(true)">
        <menupopup>
            <menuitem label="Index"
                      onClick='org.zkoss.zk.ui.util.Notification.show(self.label)'/>
        </menupopup>
    </combobutton>
</zk>