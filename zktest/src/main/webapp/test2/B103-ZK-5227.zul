<zk>
    <label multiline="true">
        1. focus on the input field in the middle combobox
        2. press the up or down arrow key
        3. this action should open the combobox and display the dropdown automatically
    </label>
    <combobox autodrop="false" placeholder="no autodrop">
        <comboitem label="foo" />
        <comboitem label="bar" />
        <comboitem label="baz" />
    </combobox>
    <combobox autodrop="true" placeholder="with autodrop">
        <comboitem label="foo" />
        <comboitem label="bar" />
        <comboitem label="baz" />
    </combobox>
    <combobox w:onFocus="this.open()" xmlns:w="client" autodrop="true"
              placeholder="with autodrop and open on focus">
        <comboitem label="foo" />
        <comboitem label="bar" />
        <comboitem label="baz" />
    </combobox>
</zk>